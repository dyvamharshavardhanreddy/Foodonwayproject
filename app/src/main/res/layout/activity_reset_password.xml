<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.ResetPasswordActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/etResetOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_background"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="6dip"
        android:layout_marginRight="12dip"
        android:layout_below="@+id/toolbar"
        android:maxLength="10"
        android:drawablePadding="3dp"
        android:maxLines="1"
        android:hint="@string/otp"
        android:inputType="phone"
        android:padding="10dip"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/etResetNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_view_background"
        android:layout_below="@+id/etResetOtp"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="6dip"
        android:layout_marginRight="12dip"
        android:gravity="top"
        android:drawablePadding="3dp"
        android:inputType="numberPassword"
        android:hint="@string/reset_new_password"
        android:padding="10dip"
        android:maxLength="6"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>


    <EditText
        android:id="@+id/etResetConfirmPassword"
        android:layout_width="match_parent"
        android:background="@drawable/text_view_background"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etResetNewPassword"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="6dip"
        android:layout_marginRight="12dip"
        android:hint="@string/confirm_password"
        android:inputType="numberPassword"
        android:padding="10dip"
        android:maxLength="6"
        android:maxLines="1"
        android:drawablePadding="3dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnResetSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etResetConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="12dip"
        android:layout_marginTop="40dip"
        android:layout_marginRight="12dip"
        android:background="@color/colorPrimaryDark"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"/>

</RelativeLayout>